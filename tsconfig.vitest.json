{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "bundler",
      "target": "ES2020",
      "jsx": "react-jsx",
      "types": ["vitest/globals", "@testing-library/jest-dom", "vite/client"],
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "skipLibCheck": true
    },
    "include": [
      "src/renderer/**/*.ts",
      "src/renderer/**/*.tsx",
      "tests/**/*.ts",
      "tests/**/*.tsx",
      "tests", 
      "vite.config.ts", 
      "vitest.config.ts"
    ]
  }